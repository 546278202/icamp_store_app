<view class="container">
    <view style="background:rgba(243,243,243,1);padding: 15px 15px 20px 15px;">
        <view style="font-size:24px;color:#303030;font-weight:600;margin-bottom: 10px;">添加营员</view>
        <view style="font-size:14px;color:#484848;">为顺利出行，请核对填写的信息与证件一致；我们确保 您的资料受到保护。</view>
    </view>
    <div>
        <view style="color:#484848;font-size:16px;font-weight:600;padding: 25px 15px 0 15px;">详细信息</view>
        <view style="border-bottom:1px solid #F1F1F1;padding:15px 0 10px 0;">
            <view style="font-size:14px;color:#484848;font-weight: bold;padding:0 15px;">身高</view>
            <view style="display:flex;align-items: center;">
                <view style="flex:1;">
                    <van-field value="{{ base.height}}" bind:change="onChange" data-id="camperName" placeholder-style="color:#D8D8D8;font-size:14px;" placeholder="确保与证件一样" border="{{false}}" bind:change="onChangeHeight" />
                </view>
                <view style="width:45px;">
                    <van-icon name="arrow-down" color="#D8D8D8" />
                </view>
            </view>
        </view>
        <view style="border-bottom:1px solid #F1F1F1;padding:15px 0 10px 0;">
            <view style="font-size:14px;color:#484848;font-weight: bold;padding:0 15px;">体重</view>
            <view style="display:flex;align-items: center;">
                <view style="flex:1;">
                    <van-field value="{{ base.weigth}}" bind:change="onChange" data-id="weight" placeholder-style="color:#D8D8D8;font-size:14px;" placeholder="确保与证件一样" border="{{false}}" bind:change="onChangeWeigth" />
                </view>
                <view style="width:45px;">
                    <van-icon name="arrow-down" color="#D8D8D8" />
                </view>
            </view>
        </view>
        <view style="border-bottom:1px solid #F1F1F1;padding:15px 0 10px 0;">
            <view style="font-size:14px;color:#484848;font-weight: bold;padding:0 15px;">姓名（英文名）</view>
            <view style="display:flex;align-items: center;">
                <view style="flex:1;">
                    <van-field value="{{ base.camperNameEn}}" data-id="camperNameEn" placeholder-style="color:#D8D8D8;font-size:14px;" placeholder="确保与证件一样" border="{{false}}" bind:change="onChange" />
                </view>
                <view style="width:45px;">
                    <van-icon name="arrow-down" color="#D8D8D8" />
                </view>
            </view>
        </view>
        <view style="border-bottom:1px solid #F1F1F1;padding:15px 0 10px 0;">
            <view style="font-size:14px;color:#484848;font-weight: bold;padding:0 15px;">语言（母语）</view>
            <view style="display:flex;align-items: center;">
                <view style="flex:1;">
                    <van-field value="{{ base.camperNameEn}}" data-id="camperNameEn" placeholder-style="color:#D8D8D8;font-size:14px;" placeholder="确保与证件一样" border="{{false}}" bindtap="handleShowPopup" />
                </view>
                <view style="width:45px;">
                    <van-icon name="arrow-down" color="#D8D8D8" />
                </view>
            </view>
        </view>
    </div>
    <view style="padding: 50px 10px;">
        <van-button type="primary" size="large" color="#6C68DF" custom-class="btn-class" bindtap="handleSubmit">保存/返回</van-button>
    </view>
</view>
<van-popup show="{{ show }}" bind:close="handleShowPopup" position="bottom" custom-style="height: 300px;">
    <div style="height:46px;display:flex;justify-content: space-between;align-items: center;color: #1989fa;font-size: 14px;padding: 0 16px;">
        <text bindtap="handleShowPopup">取消</text>
        <text bindtap="handleShowPopup">确认</text>
    </div>
    <picker-view class="nyz_area_pick_view" indicator-style="height: 45px;" value="{{value}}" bindchange="bindchange">
        <picker-view-column>
            <view class="nyz_area_colum_view" wx:for="{{provinces}}" wx:for-index='index' data-id="{{item.districtId}}">{{item.district}}</view>
        </picker-view-column>
        <picker-view-column>
            <view class="nyz_area_colum_view" wx:for="{{citys}}" wx:for-index='index' data-id="{{item.districtId}}">{{item.district}}</view>
        </picker-view-column>
        <picker-view-column>
            <view class="nyz_area_colum_view" wx:for="{{areas}}">{{item.district}}</view>
        </picker-view-column>
    </picker-view>
</van-popup>