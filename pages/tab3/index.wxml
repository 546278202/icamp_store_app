<view class="container">
    <van-sticky>
        <view style="display:flex;justify-content:space-between;align-items: center;height:50px;padding: 0 15px;background: #fff;font-size:16px;color:#303030;">
            <view data-no='1' bindtap='toggle' class="{{active == 1?'active':''}}" style="display:flex;height:32px;line-height:32px;border-radius:32px;text-align: center;">公司新闻</view>
            <view data-no='2' bindtap='toggle' class="{{active == 2?'active':''}}" style="display:flex;height:32px;line-height:32px;border-radius:32px;text-align: center;">行业新闻</view>
            <view data-no='3' bindtap='toggle' class="{{active == 3?'active':''}}" style="display:flex;height:32px;line-height:32px;border-radius:32px;text-align: center;">重要通知</view>
        </view>
    </van-sticky>
    <view wx:for="{{imgUrls}}" wx:for-item="item" wx:for-index='index' style="margin:15px;padding:15px;background: #fff;border-radius:8px;overflow: hidden;box-shadow:0px 3px 6px 0px rgba(233,233,233,1);">
        <view style="color:#484848;font-size:15px;font-weight:600;">2019瑞士·自然探索营会 </view>
        <view style="color:#696969;font-size:14px;">2019-08-19</view>
        <image src="{{item}}" style="width:100%;height:190px;margin-top:5px;" />
        <view style="color:#696969;font-size:14px;margin-top:10px;">约两周或三周·瑞士/日内瓦两周或三周两周或三周两周或三周两周或三周</view>
    </view>
    <van-divider contentPosition="center" customStyle=";padding:0 15px;">已加载完毕</van-divider>
</view>